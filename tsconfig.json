{
  "compilerOptions": {
    "target": "ES2020",  // Adjust if targeting a specific ES version
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"  // Adjust for specific Node.js version if needed
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,  // Enabled for better code hygiene
    "noUnusedParameters": true,  // Enabled for better code hygiene
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
